<%- include('../partials/user-header')%>
  <div class="col-lg-10 mx-auto">
    <div class="sort-by-product-area mt-3 d-flex justify-content-between">
      <form id="search-form">  
        <div class="d-flex">
          <form class="form-subcriber d-flex wow fadeIn animated">
            <input type="text" id="search-input" name="query" placeholder="Search...">
            <button class="btn-sm" type="submit">Search</button>
        </form>
   

        </div>      
          
          
      </form>

        <div class="sort-by-cover mr-10 mb-sm-5 align-items-left">
        <form id="category">
          <div class="sort-by-product-wrap d-flex">
            <div class="sort-by">
              <span class="text-primary"><i class="fi-rs-apps m-2"></i>Category</span>
            </div>

            <div>
              <select id="myCategory" onchange="category()">
                <option value="MEN">Men</option>
                <option value="WOMEN">Women</option>
                <option value="UNISEX">All products</option>

              </select>
              
            </div>
          </div>

        </form>
      </div>

      <div class="sort-by-cover">
        <form id="sort">
          <div class="sort-by-product-wrap d-flex">
            <div class="sort-by">

              <span class="text-primary"><i class="fi-rs-apps-sort m-2"></i>Sort by:</span>
            </div>
            <div>
              <select id="myFilter" onchange="filterProducts()">
                <option value="low-to-high">Price: Low to High</option>
                <option value="high-to-low">Price: High to Low</option>
              
              </select>
            </div>
          </div>


        </form>
      </div>

    </div>
  </div>

     
  </div>
  <% bannerData.forEach(function(bannerData) { %>
    <div class="single-hero-slider single-animation-wrap">
      <div class="container">
        <div class="row align-items-center slider-animated-1">
          <div class="col-lg-5 col-md-6">
            <div class="hero-slider-content-2">
              <h2 class="animated fw-900">
                <%=bannerData.title%>
              </h2>
              <h4 class="animated fw-900">
                <%=bannerData.description%>
              </h4>
              <!-- <h1 class="animated fw-900 text-brand">On all products</h1>
                      <p class="animated">Save more with coupons & up to 70% off</p> -->
              <a class="animated btn btn-brush btn-brush-3" href="/shop"> Shop Now </a>
            </div>
          </div>
          <div class="col-lg-7 col-md-6">
            <div class="single-slider-img single-slider-img-1">
              <img class="animated slider-1-1" src="/uploads/<%=bannerData.image %>" alt="" width="3500" height="500">
            </div>

          </div>
        </div>
      </div>
    </div>

    <% }) %>
      <section class="mt-50 mb-50">

        <div class="container">

          <div class="row">
            <div class="col-lg-14">
