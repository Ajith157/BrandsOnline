                          <li class="page-item active">
                            <a class="page-link" href="/shop?i=<%=i %>"><%=i %></a>
                          </li>
                          <%}%>
                        
                          
                        </ul>
                      </nav>
                    </div>
              </div>
            </div>
          </div>
      </section>





